@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}


    <div class="container">
        <main role="main" class="pb-3">            
            <div class="row">
                <div class="col-md-4">
                    <section>
                        <form id="role" method="post" novalidate="novalidate">
                            <h4>Add New User Role</h4>
                            <hr>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="Name">Role Name</label>
                                <input class="form-control" asp-for="Name" value="">
                                <span class="text-danger field-validation-valid" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <button id="login-submit" type="submit" class="btn btn-primary">Create Role</button>
                                <a class="btn btn-default" asp-action="RolesList" asp-controller="Administration">Cancel</a>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                       
                    </section>
                </div>
            </div>


        </main>
    </div>