@model EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-12">
                <section>
                    <form id="role" method="post" novalidate="novalidate">
                        <h4>Edit User</h4>
                        <hr>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label for="Id">Id</label>
                            <input class="form-control" asp-for="Id" disabled>
                            <span class="text-danger field-validation-valid" asp-validation-for="Id"></span>
                        </div>
                        <div class="form-group">
                            <label for="Name">User Name</label>
                            <input class="form-control" asp-for="UserName" disabled>
                            <span class="text-danger field-validation-valid" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <button id="login-submit" type="submit" class="btn btn-primary" disabled>Update User</button>
                            <a class="btn btn-default" asp-action="UsersList" asp-controller="Administration">Cancel</a>
                        </div>
                    </form>
                </section>
            </div>
           
        </div>
            <hr />
        <div class="row">
            <div class="col-md-6">
                <section>
                    <h4>Roles</h4><a asp-controller="Administration"
                                     asp-action="ManageRoles"
                                     asp-route-userId="@Model.Id"
                                     class="btn btn-primary btn-sm">Manage Roles</a>
                    <hr>
                    <div>
                        <table class="table table-responsive-sm table-bordered">
                            <tr>
                                <th>User Roles</th>
                            </tr>
                            @if (Model.roles != null)
                        {
                            @foreach (var item in Model.roles)
                            {
                                <tr>
                                    <td>@item</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="text-center">No user role yet</td>
                            </tr>
                        }
                        </table>

                    </div>
                </section>
            </div>
            <div class="col-md-6">
                <section>
                    <h4>Claims</h4><a asp-controller="Administration"
                                      asp-action="ManageClaims"
                                      asp-route-userId="@Model.Id"
                                      class="btn btn-primary btn-sm">Manage Claims</a>
                    <hr>
                    <div>
                        <table class="table table-responsive-sm table-bordered">
                            <tr>
                                <th>User Claims</th>
                            </tr>
                            @if (Model.claims != null)
                            {
                                @foreach (var item in Model.claims)
                                {
                                    <tr>
                                        <td>@item</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="text-center">No claims for this user yet</td>
                                </tr>
                            }
                        </table>

                    </div>
                </section>
            </div>
        </div>


    </main>
</div>